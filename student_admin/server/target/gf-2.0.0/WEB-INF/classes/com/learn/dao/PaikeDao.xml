<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.learn.dao.PaikeDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.learn.entity.PaikeEntity" id="paikeMap">
        <result property="id" column="id"/>
        <result property="course" column="course"/>
        <result property="time" column="time"/>
        <result property="gmttime" column="gmtTime"/>
    </resultMap>

    <select id="queryObject" resultType="com.learn.entity.PaikeEntity">
		select * from paike where id = #{value}
	</select>

    <select id="queryList" resultType="com.learn.entity.PaikeEntity">
        select * from paike where 1=1
        <if test="course != null and course != ''">
            and course=#{course}
        </if>
        <if test="courses != null and courses != ''">
            and course in
            (${courses})
        </if>


        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from paike where 1=1
        <if test="course != null and course != ''">
            and course=#{course}
        </if>
        <if test="courses != null and courses != ''">
            and course in
            (${courses})
        </if>

    </select>

    <insert id="save" parameterType="com.learn.entity.PaikeEntity" useGeneratedKeys="true" keyProperty="id">
		insert into paike
		(
			`course`, 
			`time`, 
			`gmtTime`,`end`
		)
		values
		(
			#{course}, 
			#{time}, 
			#{gmttime},#{end}
		)
	</insert>

    <update id="update" parameterType="com.learn.entity.PaikeEntity">
        update paike
        <set>
            <if test="course != null">`course` = #{course},</if>
            <if test="time != null">`time` = #{time},</if>
            <if test="end != null">`end` = #{end},</if>
            <if test="gmttime != null">`gmtTime` = #{gmttime}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from paike where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from paike where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>