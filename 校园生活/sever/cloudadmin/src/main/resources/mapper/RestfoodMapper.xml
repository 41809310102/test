<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.naughty.userlogin02.dao.RestfoodDao">

    <select id="getAllfood" resultType="com.naughty.userlogin02.bean.Restfood">
        SELECT * FROM restfood
        <if test="name !=null ">
            WHERE name like #{name}
        </if>
        LIMIT #{start},#{end}
    </select>

    <select id="getfoodCount" resultType="java.lang.Integer">
        SELECT count(*) FROM restfood
        <if test="name !=null ">
            WHERE name like #{name}
        </if>
    </select>

    <select id="findFooddec" resultType="com.naughty.userlogin02.bean.Restfood">
        SELECT * FROM restfood
        <if test="id !=null ">
            WHERE id like #{id}
        </if>
    </select>

</mapper>