<view class='container'>
  <form bindsubmit='register'>
    <input placeholder='请输入您的姓名' class='input' focus='true' value='{{ stuName }}' maxlength='4' bindinput='bindData' data-key='stuName'name="stuName"></input>
    <input placeholder='请输入您的学号' type='number' class='input' value='{{ stuId }}' maxlength='12' bindinput='bindData' data-key='stuId'name="stuId"></input>
    <input type='password' type='password' maxlength='16' placeholder='请输入密码' class='input' value='{{ password }}' bindinput='bindData' data-key='password'name="password"></input>
    <input type='password' type='password' maxlength='16' placeholder='请确认您的密码' class='input' value='{{ checkPassword }}' bindinput='bindData' data-key='checkPassword'name="checkPassword"></input>
    <button class='register-button' formType="submit">注册</button>
  </form>
</view>